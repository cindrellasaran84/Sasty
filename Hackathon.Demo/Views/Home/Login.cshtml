@model Hackathon.Demo.Models.LoginModel
<link href="~/content/css/default.css" rel="stylesheet" />
<body class="login-body">
    <form method="post" action="@Url.Action("Login", "Home")" >
        <div style="width: 100%; height: 170px; left: 0; top: 50%; margin-top: -100px; position: absolute; filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#14FFFFFF', endColorstr='#14FFFFFF'); background: linear-gradient(rgba(255,255,255,.1) 100%, transparent);">
            <div style="width: 100%; height: 100%; margin-left: 15px; filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#14FFFFFF', endColorstr='#14FFFFFF'); background: linear-gradient(rgba(255,255,255,.1) 100%, transparent);">
                <table style="width: 95%; height: 100%; border: 0;">
                    <tr>
                        <td style="vertical-align: middle; text-align: center; font-family: Trebuchet MS; font-size: 30px; color: white; width: 50%;">New Business Data Entry Staff Login</td>
                        <td>
                            <table style="font-family: Trebuchet MS; font-size: 12px; color: white; margin-top: 60px;">
                                <tr>
                                    <td style="padding-right: 25px;">User Id</td>
                                    <td>
                                        <input class="login-input" name="UserName" type="text" value="" />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding-right: 25px;">Password
                                    </td>
                                    <td>
                                        <input class="login-input" name="Password" type="password" value="" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>&nbsp;</td>
                                    <td>
                                        <input id="idLogin" class="loginButton" value="" type="submit" value="Login" />
                                    </td>
                                </tr>
                                <tr>
                                    <td><span style="color: red">@Html.ValidationSummary(true)</span></td>
                                    <td></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </form>
</body>
